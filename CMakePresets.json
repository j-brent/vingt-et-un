{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "include": [],
  "configurePresets": [
    {
      "name": "windows",
      "displayName": "Windows configuration for both Relase and Debug builds",
      "description": "",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-win",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux",
      "displayName": "Linux configuration for both Relase and Debug builds",
      "description": "",
      "binaryDir": "${sourceDir}/build-linux",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "windows-qml",
      "displayName": "Windows QML build",
      "inherits": "windows",
      "binaryDir": "${sourceDir}/build-win-qml",
      "cacheVariables": {
        "ENABLE_QML": "ON"
      }
    },
    {
      "name": "linux-qml",
      "displayName": "Linux QML build with GCC",
      "inherits": "linux",
      "binaryDir": "${sourceDir}/build-linux-qml",
      "cacheVariables": {
        "ENABLE_QML": "ON"
      }
    },
    {
      "name": "linux-clang-qml",
      "displayName": "Linux QML build with Clang",
      "inherits": "linux",
      "binaryDir": "${sourceDir}/build-linux-clang-qml",
      "cacheVariables": {
        "ENABLE_QML": "ON",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "windows-release",
      "configurePreset": "windows",
      "configuration": "Release"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows",
      "configuration": "Debug"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux",
      "configuration": "Release"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux",
      "configuration": "Debug"
    },
    {
      "name": "windows-qml-release",
      "configurePreset": "windows-qml",
      "configuration": "Release"
    },
    {
      "name": "windows-qml-debug",
      "configurePreset": "windows-qml",
      "configuration": "Debug"
    },
    {
      "name": "linux-qml-release",
      "configurePreset": "linux-qml",
      "configuration": "Release"
    },
    {
      "name": "linux-qml-debug",
      "configurePreset": "linux-qml",
      "configuration": "Debug"
    },
    {
      "name": "linux-clang-qml-release",
      "configurePreset": "linux-clang-qml",
      "configuration": "Release"
    },
    {
      "name": "linux-clang-qml-debug",
      "configurePreset": "linux-clang-qml",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    },
    {
      "name": "windows-release",
      "configurePreset": "windows",
      "configuration": "Release",
      "inherits": "default"
    },
    {
      "name": "windows-debug",
      "configurePreset": "windows",
      "configuration": "Debug",
      "inherits": "default"
    },
    {
      "name": "linux-release",
      "configurePreset": "linux",
      "configuration": "Release",
      "inherits": "default"
    },
    {
      "name": "linux-debug",
      "configurePreset": "linux",
      "configuration": "Debug",
      "inherits": "default"
    },
    {
      "name": "windows-qml-release",
      "configurePreset": "windows-qml",
      "configuration": "Release",
      "inherits": "default"
    },
    {
      "name": "windows-qml-debug",
      "configurePreset": "windows-qml",
      "configuration": "Debug",
      "inherits": "default"
    },
    {
      "name": "linux-qml-release",
      "configurePreset": "linux-qml",
      "configuration": "Release",
      "inherits": "default"
    }
  ],
  "packagePresets": [],
  "workflowPresets": [
    {
      "name": "windows-release",
      "steps": [
        {
          "type": "configure",
          "name": "windows"
        },
        {
          "type": "build",
          "name": "windows-release"
        },
        {
          "type": "test",
          "name": "windows-release"
        }
      ]
    },
    {
      "name": "windows-debug",
      "steps": [
        {
          "type": "configure",
          "name": "windows"
        },
        {
          "type": "build",
          "name": "windows-debug"
        },
        {
          "type": "test",
          "name": "windows-debug"
        }
      ]
    },
    {
      "name": "linux-release",
      "steps": [
        {
          "type": "configure",
          "name": "linux"
        },
        {
          "type": "build",
          "name": "linux-release"
        },
        {
          "type": "test",
          "name": "linux-release"
        }
      ]
    },
    {
      "name": "windows-qml-release",
      "steps": [
        { "type": "configure", "name": "windows-qml" },
        { "type": "build", "name": "windows-qml-release" },
        { "type": "test", "name": "windows-qml-release" }
      ]
    },
    {
      "name": "linux-qml-release",
      "steps": [
        { "type": "configure", "name": "linux-qml" },
        { "type": "build", "name": "linux-qml-release" },
        { "type": "test", "name": "linux-qml-release" }
      ]
    },
    {
      "name": "linux-clang-qml-release",
      "steps": [
        { "type": "configure", "name": "linux-clang-qml" },
        { "type": "build", "name": "linux-clang-qml-release" }
      ]
    }
  ]
}
